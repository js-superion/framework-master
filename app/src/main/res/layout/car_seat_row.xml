<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_8dp"
        android:paddingLeft="@dimen/default_4dp"
        android:layout_marginStart="@dimen/default_4dp"
        android:layout_marginLeft="@dimen/default_4dp"
        android:paddingRight="@dimen/default_16dp"
        android:paddingBottom="@dimen/default_8dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="60dp">

            <TextView
                android:id="@+id/seat_day"
                android:textColor="@color/body_text_1"
                android:fontFamily="@string/font_normal"
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/seat_time"
                android:textColor="@color/body_text_1"
                android:fontFamily="@string/font_normal"
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/default_8dp"
            android:layout_marginStart="@dimen/default_8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/start_point"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/body_text_1"
                    android:fontFamily="@string/font_normal"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/end_point"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@string/font_normal"
                    android:textColor="@color/body_text_1"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:orientation="vertical">-->
        <TextView
            android:layout_width="30dp"
            android:id="@+id/person_num"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_normal"
            android:textColor="@color/body_text_1"
            android:textAppearance="?android:textAppearanceMedium" />

        <!--</LinearLayout>-->
    </LinearLayout>
</LinearLayout>

